<!DOCTYPE html>
<html class="theme-light" lang="en">
	<head>
		<%- include('head', {title: title}); -%>

		<style>
			/* slideshow */
			.mySlides {
				display: none;
				height: 100%;
				width: 100%;
			}

			/* Slideshow container */
			.slideshow-container {
				width: 100%;
				height: 80vh;
				margin: auto;
				position: relative;
			}

			.mySlides img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.mySlides .text {
				/* background-color: #f2f2f299; */
				background-image: radial-gradient(
					circle,
					#f2f2f2ee,
					#f2f2f299 70%,
					transparent
				);

				color: black;
				font-size: 15px;
				padding: 8px 12px;
				padding-right: 40px;
				text-align: center;

				position: absolute;
				top: 0;
				bottom: 0;
				left: 0;
				width: 25%;
				min-width: 225px;
				display: flex;
				justify-content: center;
				align-items: center;
			}

			.mySlides .text p {
				padding-bottom: 1em;
			}

			.mySlides .text a {
				background-color: var(--color-primary);
				background-image: linear-gradient(
					to right,
					var(--color-primary-dark),
					var(--color-primary-light)
				);
				background-size: calc(100% + 10px), 100%;
				background-position: -10px 0;
				transition: all 0.5s;
				color: var(--text-primary);
				padding: 10px 15px;
				text-transform: uppercase;
				text-decoration: none;
				border-radius: 25px;
				box-shadow: 0 20px 50px 10px rgb(20 61 80 / 15%);
				white-space: nowrap;
			}

			.mySlides .text a i {
				margin-left: 10px;
				transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 2);
			}

			.mySlides .text a:hover {
				background-position: 0 0;
			}

			.mySlides .text a:hover i {
				margin-left: 20px;
			}

			.control {
				text-align: center;
				position: relative;
				background-color: rgba(0, 0, 0, 0.2);
				height: 40px;
				top: -40px;
				transition: 0.6s ease;
			}

			.control:hover {
				background-color: rgba(0, 0, 0, 0.5);
			}

			/* Next & previous buttons */
			.prev,
			.next {
				cursor: pointer;
				position: absolute;
				top: 50%;
				width: auto;
				padding: 8px 12px;
				margin-top: -20px;
				color: #ffffffaa;
				font-weight: bold;
				font-size: 18px;
				transition: 0.6s ease;
				border-radius: 0 8px 8px 0;
				user-select: none;
				left: 0;
			}

			.next {
				left: auto;
				right: 0;
				border-radius: 8px 0 0 8px;
			}

			.prev:hover,
			.next:hover {
				background-color: rgba(0, 0, 0, 0.95);
				color: #ffffffff;
			}

			.dot {
				cursor: pointer;
				height: 14px;
				width: 14px;
				margin: 13px 2px;
				background-color: #bbbbbbcc;
				border-radius: 50%;
				display: inline-block;
				transition: background-color 0.6s ease;
			}

			.control .active,
			.control .dot:hover {
				background-color: #717171;
			}

			/* Fading animation */
			.fade {
				animation-name: fade;
				animation-duration: 1.5s;
			}

			@keyframes fade {
				from {
					opacity: 0.4;
				}

				to {
					opacity: 1;
				}
			}

			/* action cards */
			.cardAction {
				padding: 20px 20%;
				margin-bottom: 40px;
			}

			.cardAction .card {
				display: flex;
				flex-wrap: wrap;
				padding: 25px 0;
			}

			.cardAction .card .image {
				width: auto;
				height: auto;
				perspective: 1000px;
			}

			.cardAction .card .image,
			.cardAction .card .content {
				width: 50%;
			}

			.cardAction .card .image img {
				object-fit: cover;
				min-width: 100px;
				width: 100%;
				height: 100%;

				flex: 1;
				border-radius: 10px;
				transition: transform 0.5s;
				transform-style: preserve-3d;
				box-shadow: 5px 5px 15px 5px rgb(20 61 80 / 15%);
			}

			.cardAction .card .image:hover img {
				transform: rotateY(20deg);
			}

			.cardAction .card .content {
				flex: 1;
				padding-left: 20px;
			}

			.cardAction .card .image.backwards:hover img {
				transform: rotateY(-20deg);
			}

			.cardAction .card .content.backwards {
				padding-left: 0;
				padding-right: 20px;
			}

			.cardAction .card a {
				background-color: var(--color-primary);
				background-image: linear-gradient(
					to right,
					var(--color-primary-dark),
					var(--color-primary-light)
				);
				background-size: calc(100% + 10px), 100%;
				background-position: -10px 0;
				transition: all 0.5s;

				color: var(--text-primary);
				padding: 10px 15px;
				text-transform: uppercase;
				text-decoration: none;
				border-radius: 25px;
				box-shadow: 0 20px 50px 10px rgb(20 61 80 / 15%);
				white-space: nowrap;
			}

			.cardAction .card a i {
				margin-left: 10px;
				transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 2);
			}

			.cardAction .card a:hover {
				background-position: 0 0;
			}

			.cardAction .card a:hover i {
				margin-left: 20px;
			}

			#cardSeeMore {
				margin: auto;
				min-width: 50%;
				text-align: center;
			}

